<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.hospital.services.IMedicsDAO">
    <resultMap id="MedicsResultMap" type="com.solvd.hospital.domain.Medics" autoMapping="false">
        <result column="ID" property="idMedics" />
        <result column="firstName" property="firstName" />
        <result column="lastName" property="lastName" />
        <result column="doctorOfficeId" property="DoctorOfficeId" />
        <result column="RoomId" property="roomId" />
    </resultMap>
    <select id="getById" parameterType="int" resultMap="MedicsResultMap">
        Select * from Medics where ID =#{id}
    </select>

    <select id="getAll" resultMap="MedicsResultMap">
        Select * from Medics
    </select>
    <delete id="delete">
        Delete from Medics where ID = #{id}

    </delete>
    <insert id="save">
        Insert into Medics (idMedics,firstName,lastName,DoctorOfficeId,RoomId)
        Values (#{idMedics},#{firstName},#{lastName},#{DoctorOfficeId},#{RoomId})

    </insert>
    <update id="update">
        Update Medics set
        idMedics = #{idMedics},
        firstName = #{firstName},
        lastName = #{lastName},
        DoctorOfficeId = #{DoctorOfficeId},
        RoomId = #{RoomId}
        where ID = #{id}
    </update>
</mapper>